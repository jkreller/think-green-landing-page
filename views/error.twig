{% extends 'layout.twig' %}

{% block title %}Error{% endblock %}

{% block main %}
  <section class="section">
    <div class="container">
      <div class="columns has-text-centered is-centered is-vcentered">
        <div class="column">
          <h1 class="is-size-1">
            {% if error.status == 404 %}
              Ups. You found a dead link.
            {% else %}
              Sorry, an error occured.
            {% endif %}
          </h1>
          <p class="is-size-5">Return to the <a href="/">homepage</a>.</p>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
