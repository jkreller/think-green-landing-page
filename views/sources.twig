{% extends 'layout.twig' %}

{% set sources = {
  'Drive by bike!': {
    'Greenhouse gas emissions by sector': 'https://www.eea.europa.eu/data-and-maps/daviz/ghg-emissions-by-aggregated-sector-5',
    'Greenhouse gas emissions of transport sector by vehicle type': 'https://www.eea.europa.eu/data-and-maps/daviz/share-of-transport-ghg-emissions-2'
  },
  'Close the tap!': [
    'https://www.intelligenthanddryers.com/blog/why-is-saving-water-important'
  ],
  'Eat less meat!': [
    'https://www.nature.com/articles/d41586-019-02409-7'
  ],
  'Use public transport!': [
    'https://www.bbc.com/future/article/20200317-climate-change-cut-carbon-emissions-from-your-commute'
  ],
  'Use a green search engine!': [
    'https://blog.ecosia.org/co2-neutral-seach-engine-ecosia-solar-plant/',
    'https://sustainability.google/progress/#carbon-free-energy'
  ],
  'Buy second hand!': [
    'https://www.activesustainability.com/sustainable-development/consumer-society-environmental-impact-planet/',
    'https://tabitha-whiting.medium.com/should-you-buy-clothes-second-hand-to-reduce-your-environmental-impact-1ef1cabee982'
  ],
  'Use rechargeable batteries!': [
    'https://www.nytimes.com/wirecutter/blog/are-rechargeable-batteries-better-than-alkaline/',
    'https://sciencing.com/environmental-problems-batteries-cause-7584347.html'
  ]
} %}

{% block title %}Sources{% endblock %}

{% block main %}
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column sources">
          <h1 class="is-size-1 has-text-centered">Sources</h1>
          {% for sourceTitle, links in sources %}
            <section>
              <h2 class="is-size-2">{{ sourceTitle }}</h2>
              {% for linkTitle, link in links %}
                <p>
                  {% if linkTitle is not odd and linkTitle is not even %}
                    {{ linkTitle }}:
                  {% endif %}
                  <a target="_blank" href="{{ link }}">{{ link }}</a>
                </p>
              {% endfor %}
            </section>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endblock %}