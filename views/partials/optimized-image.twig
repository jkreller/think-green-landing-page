<figure class="image {{ classes }}">
  <picture>
    <source srcset="/images/{{ name }}.webp" type="image/webp">
    <source srcset="/images/{{ name }}.png" type="image/png">
    <img src="/images/{{ name }}.png" width="{{ width }}" height="{{ height }}"
         alt="{{ altText }}">
  </picture>
</figure>